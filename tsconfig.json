{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": false,
    "noImplicitAny": true,
    "noEmit": true,
    "typeRoots": [
      "solutions/types"
    ]
  },
  "include": [
    "solutions",
    "scripts"
  ],
  "exclude": [
    "node_modules"
  ]
}
